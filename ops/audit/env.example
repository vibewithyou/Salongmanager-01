APP_NAME="SalonManager"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=salonmanager
DB_USERNAME=salonmanager
DB_PASSWORD=salonmanager_password

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@salonmanager.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Payment Gateways
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

MOLLIE_KEY=
MOLLIE_WEBHOOK_URL=

# Security
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,::1
SESSION_DOMAIN=localhost

# GDPR & Compliance
GDPR_RETENTION_DAYS=2555
GDPR_EXPORT_FORMAT=json

# File Upload
MAX_FILE_SIZE=10240
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Notifications
NOTIFICATION_EMAIL_FROM=noreply@salonmanager.com
NOTIFICATION_SMS_FROM=SalonManager

# Google Services (for reviews)
GOOGLE_PLACES_API_KEY=
GOOGLE_MAPS_API_KEY=

# AI/Gallery Services
OPENAI_API_KEY=
CONTENT_MODERATION_ENABLED=true

# Multi-tenant
TENANT_ISOLATION_ENABLED=true
DEFAULT_TENANT_ID=1
